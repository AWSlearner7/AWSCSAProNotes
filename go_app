---
kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: go
  namespace: default
  labels:
    k8s-app: go
  annotations:
    deployment.kubernetes.io/revision: '1'
spec:
  replicas: 1
  selector:
    matchLabels:
      k8s-app: go
  template:
    metadata:
      name: go
      labels:
        k8s-app: go
    spec:
      containers:
      - name: go
        image: mert/go-app
        imagePullPolicy: Never
        securityContext:
          privileged: false
        ports:
        - containerPort: 8080
          protocol: TCP
        resources:
          requests:
            cpu: 100m
            memory: 128Mi
          limits:
            cpu: 400m
            memory: 512Mi
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
